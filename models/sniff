var mongoose = require("mongoose"),
    passportLocalMongoose = require("passport-local-mongoose");

var SniffSchema = new mongoose.Schema({
    capture : {
        request_to_send : [
            {   source : String,
                destination : String,
            }
        ],
        clear_to_send : [
            {   
                source : String,
            }
        ],
        signal_strength : [ // to be replaced with meta-data
            {
                signal_strength : String,
            }
        ],
        auth : 
        [
            {
                source : String,
                destination : String,
                BSS : String,
            }
        ]
    }
});

SniffSchema.plugin(passportLocalMongoose);
module.exports = mongoose.model("Sniff", SniffSchema);